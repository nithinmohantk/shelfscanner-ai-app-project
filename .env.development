# Development Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Configuration
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
ENVIRONMENT=development

# Database Configuration (Docker Compose defaults)
POSTGRES_DB=shelfscanner
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/shelfscanner

# Redis Configuration (Docker Compose defaults)
REDIS_URL=redis://localhost:6379

# API Keys (REQUIRED - Add your actual keys)
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_CLOUD_PROJECT=your_google_cloud_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Docker Hub Configuration (for CI/CD)
DOCKERHUB_USERNAME=your_dockerhub_username
DOCKERHUB_TOKEN=your_dockerhub_access_token
